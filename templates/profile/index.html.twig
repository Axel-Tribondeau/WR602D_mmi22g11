{# templates/profile/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Modifier votre profil{% endblock %}

{% block body %}
    <div class="container mx-auto p-6 max-w-4xl">
        <h1 class="text-4xl font-semibold text-center mb-6">Modifier votre profil</h1>

        <div class="bg-white p-6 rounded-lg shadow-md mb-6">
            <div class="space-y-4">
                <p class="text-xl"><strong>Email :</strong> {{ user.email }}</p>
                <p class="text-xl"><strong>Prénom :</strong> {{ user.firstname }}</p>
                <p class="text-xl"><strong>Nom :</strong> {{ user.lastname }}</p>
                <p class="text-xl"><strong>Abonnement :</strong> {{ user.subscription ? user.subscription.name : 'Aucun abonnement' }}</p>
            </div>
        </div>

        <div class="text-center">
            <a href="{{ path('app_reset_password', {'email': userEmail}) }}"
               class="inline-block px-6 py-3 bg-blue-600 text-white text-lg font-semibold rounded-lg shadow-md hover:bg-blue-700 transition duration-200 ease-in-out">
                Réinitialiser votre mot de passe
            </a>
        </div>
    </div>
{% endblock %}
