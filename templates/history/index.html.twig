{% extends 'base.html.twig' %}

{% block title %}Historique des PDFs{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto mt-10 bg-white shadow-lg rounded-lg p-6">
        <h1 class="text-2xl font-bold text-gray-800 mb-4">üìú Historique des PDFs</h1>

        <table class="w-full border-collapse border border-gray-300">
            <thead>
            <tr class="bg-gray-100 text-gray-700">
                <th class="border border-gray-300 px-4 py-2 text-left">Nom du PDF</th>
                <th class="border border-gray-300 px-4 py-2 text-left">Date de G√©n√©ration</th>
                <th class="border border-gray-300 px-4 py-2 text-center">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for file in files %}
                <tr>
                    <td class="border border-gray-300 px-4 py-2">{{ file.name }}</td>
                    <td class="border border-gray-300 px-4 py-2">{{ file.createdAt|date('d/m/Y H:i') }}</td>
                    <td class="border border-gray-300 px-4 py-2 text-center">
                        <a href="{{ path('download_pdf', {'fileName': file.name}) }}" class="bg-blue-500 text-white py-1 px-3 rounded">T√©l√©charger</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center py-4">Aucun PDF g√©n√©r√©</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <!-- Ajouter le bouton pour supprimer l'historique -->
        <div class="mt-4 text-center">
            <form action="{{ path('clear_history') }}" method="post" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer tous vos fichiers PDF ?')">
                <button type="submit" class="bg-red-500 text-white py-2 px-4 rounded">
                    Effacer l'historique
                </button>
            </form>
        </div>
    </div>
{% endblock %}
