{% extends 'base.html.twig' %}

{% block title %}Mot de passe oubli√©{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-100 px-4">
        <div class="w-full max-w-lg bg-white p-8 rounded-lg shadow-lg">
            <h1 class="text-3xl font-bold text-center text-gray-800">üîë Mot de passe oubli√©</h1>
            <p class="text-center text-gray-600 mt-2">Veuillez entrer votre e-mail, pr√©nom et nom pour v√©rifier votre identit√©.</p>

            <!-- Affichage des erreurs -->
            {% for message in app.flashes('danger') %}
                <div class="bg-red-100 text-red-700 px-4 py-2 rounded-md mt-4 text-center" id="error-message">
                    {{ message }}
                </div>
            {% endfor %}

            <!-- Formulaire -->
            {{ form_start(forgotPasswordForm, { 'attr': {'class': 'mt-6 space-y-4'} }) }}

            <div>
                {{ form_label(forgotPasswordForm.email, 'Adresse e-mail', { 'label_attr': {'class': 'block text-gray-700 font-medium'} }) }}
                {{ form_widget(forgotPasswordForm.email, { 'attr': {'class': 'mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500', 'placeholder': 'Entrez votre adresse e-mail'} }) }}
            </div>

            <div>
                {{ form_label(forgotPasswordForm.firstname, 'Pr√©nom', { 'label_attr': {'class': 'block text-gray-700 font-medium'} }) }}
                {{ form_widget(forgotPasswordForm.firstname, { 'attr': {'class': 'mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500', 'placeholder': 'Entrez votre pr√©nom'} }) }}
            </div>

            <div>
                {{ form_label(forgotPasswordForm.lastname, 'Nom', { 'label_attr': {'class': 'block text-gray-700 font-medium'} }) }}
                {{ form_widget(forgotPasswordForm.lastname, { 'attr': {'class': 'mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500', 'placeholder': 'Entrez votre nom'} }) }}
            </div>

            <!-- Bouton V√©rifier -->
            <div class="mt-6">
                <button type="submit" class="w-full py-2 px-4 bg-blue-600 text-white font-bold rounded-lg hover:bg-blue-700 transition focus:outline-none focus:ring-2 focus:ring-blue-500">
                    V√©rifier
                </button>
            </div>

            {{ form_end(forgotPasswordForm) }}
        </div>
    </div>

    <!-- Script pour cacher le message d'erreur apr√®s 3 secondes -->
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const errorMessage = document.getElementById('error-message');
            if (errorMessage) {
                setTimeout(() => {
                    errorMessage.style.opacity = '0';
                    setTimeout(() => errorMessage.style.display = 'none', 500);
                }, 3000);
            }
        });
    </script>
{% endblock %}
