{% extends 'base.html.twig' %}

{% block title %}Symfony Docs Repository{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }
        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Informations du dépôt GitHub ✅</h1>

        <ul>
            <li><strong>Nom :</strong> {{ github_data.name }}</li>
            <li><strong>Description :</strong> {{ github_data.description }}</li>
            <li><strong>Propriétaire :</strong> {{ github_data.owner.login }}</li>
            <li><strong>Nombre d'étoiles :</strong> {{ github_data.stargazers_count }}</li>
            <li><strong>Nombre de forks :</strong> {{ github_data.forks_count }}</li>
            <li><strong>URL :</strong> <a href="{{ github_data.html_url }}" target="_blank">{{ github_data.html_url }}</a></li>
        </ul>
    </div>
{% endblock %}