{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <!-- Section principale -->
    <div class="flex items-center justify-center min-h-screen bg-gray-100 py-6 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8 bg-white p-8 rounded-lg shadow-lg">
            <h1 class="text-3xl font-extrabold text-center text-gray-900">Créer un compte</h1>

            <!-- Affichage des erreurs flash -->
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="bg-red-100 text-red-700 p-4 rounded mb-4">
                    {{ flash_error }}
                </div>
            {% endfor %}

            <!-- Formulaire d'inscription -->
            {{ form_start(registrationForm, { 'attr': {'class': 'space-y-6'} }) }}

            <!-- Champ Prénom -->
            <div class="flex flex-col">
                {{ form_row(registrationForm.firstname, {
                    'label': 'Prénom',
                    'attr': {'class': 'block text-gray-700 font-medium mb-2 border border-gray-300 p-2 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500'}
                }) }}
            </div>

            <!-- Champ Nom de famille -->
            <div class="flex flex-col">
                {{ form_row(registrationForm.lastname, {
                    'label': 'Nom de famille',
                    'attr': {'class': 'block text-gray-700 font-medium mb-2 border border-gray-300 p-2 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500'}
                }) }}
            </div>

            <!-- Champ Email -->
            <div class="flex flex-col">
                {{ form_row(registrationForm.email, {
                    'attr': {'class': 'block text-gray-700 font-medium mb-2 border border-gray-300 p-2 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500'}
                }) }}
            </div>

            <!-- Champ Mot de passe -->
            <div class="flex flex-col">
                {{ form_row(registrationForm.plainPassword, {
                    'label': 'Mot de passe',
                    'attr': {'class': 'block text-gray-700 font-medium mb-2 border border-gray-300 p-2 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500'}
                }) }}
            </div>

            <!-- Case à cocher pour accepter les termes -->
            <div class="flex items-center">
                {{ form_row(registrationForm.agreeTerms, {
                    'attr': {'class': 'mr-2'}
                }) }}
                <label for="agreeTerms" class="ml-2 text-gray-700">J'accepte les <a href="#" class="font-medium text-indigo-600 hover:text-indigo-500">termes et conditions</a></label>
            </div>

            <!-- Bouton d'inscription -->
            <div class="mt-6">
                <button type="submit" class="w-full py-2 px-4 bg-indigo-600 text-white font-bold rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                    S'inscrire
                </button>
            </div>

            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}